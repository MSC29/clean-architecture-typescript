{
    "name": "animal_facts_api",
    "version": "1.0.0",
    "description": "",
    "main": "src/index.js",
    "scripts": {
        "install:local": "npm i",
        "install:ci": "npm ci",
        "build": "rm -rf dist && tsc --lib dom --sourceMap -p ./ && cp tsconfig.json dist/ && cp .env.dev dist/",
        "lint": "eslint -c .eslintrc.js --ext .ts src/*",
        "lint:fix": "eslint -c .eslintrc.js --ext .ts src/* --fix",
        "run-ts:dev": "ENV=dev ts-node -r tsconfig-paths/register --files ./src/index.ts",
        "run-ts:test": "ENV=test ts-node -r tsconfig-paths/register --files ./src/index.ts",
        "run-compiled:local": "ENV=local node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/src/index.js",
        "test:unit": "ENV=test ts-mocha --paths -p tsconfig.json test/unit_tests/**/test_*.ts",
        "test:integration": "ENV=test ts-mocha --paths -p tsconfig.json --file test/integration_tests/setup.test.ts test/integration_tests/test_*.ts",
        "mock:api": "json-server test/integration_tests/mock_api/db.json --routes test/integration_tests/mock_api/routes.json",
        "dev-docker-pg": "docker container start postgres-docker",
        "security:audit": "npm audit --level=moderate",
        "dependencies:outdated": "npm outdated"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com:MSC29/clean-architecture-typescript.git"
    },
    "author": "",
    "license": "ISC",
    "homepage": "https://github.com/MSC29/clean-architecture-typescript",
    "dependencies": {
        "@fastify/cors": "^7.0.0",
        "@fastify/env": "^3.0.0",
        "@fastify/swagger": "^6.0.1",
        "axios": "^0.27.2",
        "config": "^3.3.3",
        "dotenv": "^16.0.1",
        "fastify": "^3.12.0",
        "fastify-plugin": "^3.0.0",
        "js-yaml": "^4.1.0",
        "pg": "^8.5.1",
        "reflect-metadata": "^0.1.13",
        "source-map-support": "^0.5.19",
        "typeorm": "^0.3.6",
        "typescript": "^4.6.4"
    },
    "devDependencies": {
        "@types/chai": "^4.2.15",
        "@types/chai-as-promised": "^7.1.3",
        "@types/faker": "^6.6.9",
        "@types/mocha": "^9.1.1",
        "@types/node": "^14.18.18",
        "@types/pg": "^8.6.5",
        "@types/pg-copy-streams": "^1.2.1",
        "@types/sinon": "^10.0.11",
        "@typescript-eslint/eslint-plugin": "^5.23.0",
        "@typescript-eslint/parser": "^5.23.0",
        "chai": "^4.3.0",
        "chai-as-promised": "^7.1.1",
        "chai-http": "^4.3.0",
        "eslint": "^8.15.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-html": "^6.1.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsdoc": "^39.2.9",
        "eslint-plugin-no-unsafe-innerhtml": "^1.0.16",
        "eslint-plugin-no-unsanitized": "^4.0.1",
        "eslint-plugin-no-wildcard-postmessage": "^0.2.0",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-prototype-pollution-security-rules": "^1.0.6",
