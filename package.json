{
    "name": "animal_facts_api",
    "version": "1.0.0",
    "description": "",
    "main": "src/index.js",
    "scripts": {
        "build": "rm -rf dist && tsc --lib dom --sourceMap -p ./ && cp tsconfig.json dist/ && cp .env.local dist/",
        "lint": "eslint -c .eslintrc.js --ext .ts src/*",
        "run-ts:local": "ENV=local ts-node -r tsconfig-paths/register --files ./src/index.ts",
        "run-ts:test": "ENV=test ts-node -r tsconfig-paths/register --files ./src/index.ts",
        "run-ts:dev": "ENV=dev ts-node -r tsconfig-paths/register --files ./src/index.ts",
        "run-compiled:local": "ENV=local node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/src/index.js",
        "test:unit": "ENV=test ts-mocha -s 500 --paths -p tsconfig.json test/unitTests/**/*.test.ts",
        "test:integration": "ENV=test ts-mocha --timeout 5000 -s 500 --paths -p tsconfig.json --file test/integrationTests/setup.test.ts test/integrationTests/*.test.ts",
        "mock:api": "node test/integrationTests/mock-email-server/server.js",
        "dev-docker-pg": "docker container start postgres-docker",
        "dev-create-docker-pg": "docker run --name postgres-docker -e POSTGRES_PASSWORD= -d -p 5432:5432 postgres:12",
        "test-pg": "psql \"dbname=mcp host=localhost user=postgres password=postgres port=5432\"",
        "security:audit": "npm audit --level=moderate"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com:MSC29/clean-architecture-typescript.git"
    },
    "author": "",
    "license": "ISC",
    "homepage": "https://github.com/MSC29/clean-architecture-typescript",
    "dependencies": {
        "axios": "^0.21.1",
        "config": "^3.3.3",
        "fastify": "^3.12.0",
        "fastify-cors": "^4.1.0",
        "fastify-env": "^2.1.0",
        "fastify-plugin": "^3.0.0",
        "fastify-swagger": "^3.5.0",
        "js-yaml": "^3.14.1",
        "pg": "^8.5.1",
        "reflect-metadata": "^0.1.13",
        "source-map-support": "^0.5.19",
        "typeorm": "^0.2.31",
        "typescript": "^4.1.5",
        "dotenv": "^8.2.0"
    },
    "devDependencies": {
        "@types/chai": "^4.2.15",
        "@types/chai-as-promised": "^7.1.3",
        "@types/faker": "^5.1.6",
        "@types/mocha": "^8.2.0",
        "@types/node": "^13.13.41",
